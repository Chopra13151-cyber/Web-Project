<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Register - HungerHub</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <main style="max-width:600px;margin:40px auto;padding:20px">
    <h2>Create Account</h2>

    <% if (typeof error !== 'undefined' && error) { %>
      <div style="background:#ffd2d2;padding:10px;border-radius:6px;color:#900;margin-bottom:12px"><%= error %></div>
    <% } %>

    <form method="POST" action="/auth/register">
      <label>Full name</label>
      <input name="name" required>
      <label>Email</label>
      <input type="email" name="email" required>
      <label>Password</label>
      <input type="password" name="password" required>
      <div style="margin-top:12px">
        <button class="primary-btn" type="submit">Register</button>
        <a href="/auth/login" style="margin-left:12px">Login</a>
      </div>
    </form>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
